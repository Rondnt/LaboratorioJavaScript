document.addEventListener("DOMContentLoaded",function(){var d=document.getElementById("selectTipo");var a=document.getElementById("txtNumeroTarjeta");var r=document.getElementById("selectTipoDocumento");var i=document.getElementById("txtNumeroDocumento");var e=document.querySelectorAll(".numero");var n=document.getElementById("txtClaveInternet");function t(e){e.addEventListener("keypress",function(e){var t=e.which?e.which:e.keyCode;if(t>31&&(t<48||t>57)){e.preventDefault()}})}t(a);t(i);d.addEventListener("change",function(){var e=d.options[d.selectedIndex].value;var t=document.getElementById("tipoDocumentoGroup");if(e==="multired_global"||e==="dni"){t.style.display="block"}else{t.style.display="none"}});var o=document.getElementById("btnSubmit");o.addEventListener("click",function(){var e=d.options[d.selectedIndex].value;var t=a.value;var n=r.options[r.selectedIndex].value;var o=i.value;var l=[];if(e==="multired_global"){if(t.length!==16){l.push("El número de tarjeta debe contener 16 dígitos.")}if(n==="DNI"&&o.length!==8){l.push("El número de DNI debe contener 8 dígitos.")}else if(n==="RUC"&&o.length!==11){l.push("El número de RUC debe contener 11 dígitos.")}}else if(e==="dni"&&n==="DNI"&&o.length!==8){l.push("El número de DNI debe contener 8 dígitos.")}else if(e==="ruc"&&n==="RUC"&&o.length!==11){l.push("El número de RUC debe contener 11 dígitos.")}if(l.length>0){alert(l.join("\n"))}else{console.log("Tipo seleccionado:",e);console.log("Número de tarjeta:",t);console.log("Tipo de documento seleccionado:",n);console.log("Número de documento:",o)}});r.addEventListener("change",function(){var e=r.options[r.selectedIndex].value;if(e==="DNI"){i.setAttribute("maxlength","8")}else if(e==="RUC"){i.setAttribute("maxlength","11")}else{i.removeAttribute("maxlength")}});function l(){var n=Array.from({length:10},(e,t)=>t);n=n.sort(()=>Math.random()-.5);e.forEach(function(e,t){e.textContent=n[t]})}l();var c=document.getElementById("limpiar");c.addEventListener("click",function(){n.value=""});e.forEach(function(t){t.addEventListener("click",function(){var e=t.textContent.trim();if(n.value.length<6){n.value+=e}})});var u=document.getElementById("btnCambiarTexto");u.addEventListener("click",function(){var e=document.getElementById("imagenPrincipal");var t=["cap2.png","cap1.jpg","cap3.png","cap4.png"];var n=t.indexOf(e.src.split("/").pop());var o=(n+1)%t.length;e.src="imagenes/"+t[o]})});
